{
    "name": "postgresql-node",
    "version": "1.1.3",
    "description": "",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "mocha",
        "clean": "rm -rf lib",
        "build": "npm run clean && tsc --build && npm run copy",
        "copy": "copyfiles -u 1 \"src/**/*.d.ts\" \"lib\"",
        "docker": "docker compose -f testing/docker-compose.yml --project-directory . up -d --build --force-recreate",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\"",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [],
    "author": "Stefan Bauer",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.8.2",
        "@types/pg": "^8.6.5",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "copyfiles": "^2.4.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^10.1.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
